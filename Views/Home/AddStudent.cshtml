@model Student

@{
    ViewData["Title"] = "Student Information";
}
<h1>@ViewData["Title"]</h1>

<p>Enter your student information</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddStudent" method="post">
    <div class="form-group">
        <label>First name:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last name:</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Student number:</label>
        <input asp-for="StudentNumber" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Add Student" />
    </div>
</form>
